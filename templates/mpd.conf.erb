music_directory     "/home/<%= @username -%>/music"
playlist_directory  "/home/<%= @username -%>/mpd1/playlists"
db_file             "/home/<%= @username -%>/mpd1/tag_cache"
log_file            "/home/<%= @username -%>/mpd1/mpd1.log"
pid_file            "/home/<%= @username -%>/mpd1/pid"
state_file          "/home/<%= @username -%>/mpd1/state"
sticker_file        "/home/<%= @username -%>/mpd1/sticker.sql"
user                "<%= @username -%>"
bind_to_address     "localhost"
port                "7701"

input {
  plugin            "curl"
}

audio_output {
  type        "fifo"
  name        "FIFO-Bot1"
  path        "/home/<%= @username -%>/mpd1/mpd.fifo"
  format      "48000:16:1"
  mixer_type  "software"
}

filesystem_charset  "UTF-8"
id3v1_encoding      "UTF-8"
